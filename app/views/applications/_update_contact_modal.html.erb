<!---------------------------------- MODAL UPDATE CONTACT----------------------------------->


<div id="update-contact-modal-<%= contact.id %>" class="modal fade" tabindex="-1" role="dialog"
  aria-hidden="true">
   <div class="modal-dialog">
     <div class="modal-content">
       <div class="modal-body">
         <div class="text-center mt-2 mb-4">
           <h3> Update this contact</h3>
           <i class="fas fa-user-tie"></i>
         </div>

         <%= form_tag(application_contact_path(@application, contact), method: "put", class: 'pl-3 pr-3') do %>

         <div class="form-group">
           <%= label_tag(:first_name, "First name") %>
           <%= text_field_tag :first_name, contact.first_name, class: 'form-control', placeholder: 'Enter the first name' %>
         </div>

         <div class="form-group">
           <%= label_tag(:last_name, "Last name") %>
           <%= text_field_tag :last_name, contact.last_name, class: 'form-control', placeholder: 'Enter your last name' %>
         </div>

         <div class="form-group">
           <%= label_tag(:position, "Position") %>
           <%= text_field_tag :position, contact.position, class: 'form-control', placeholder: 'Enter your position'%>
         </div>

         <div class="form-group">
           <%= label_tag(:email, "Email") %>
           <%= text_field_tag :email, contact.email, class: 'form-control', placeholder: 'Enter your email' %>
         </div>

         <div class="form-group">
           <%= label_tag(:phone, "Phone") %>
           <%= text_field_tag :phone, contact.phone, class: 'form-control', placeholder: 'Enter your phone' %>
         </div>

         <div class="form-group text-center">

           <%= submit_tag "Update", class: "btn btn-primary", style:"margin-right:20px" %>

           <%= link_to application_contact_path(@application, contact), method: :delete do %>

           <button type="button" class="btn btn-danger btn-alert-success" style="margin-left: 20px;">Delete</button>
           <% end %>

         </div>

         <% end %>
       </div>
     </div><!-- /.modal-content -->
   </div><!-- /.modal-dialog -->
 </div><!-- /.modal -->


