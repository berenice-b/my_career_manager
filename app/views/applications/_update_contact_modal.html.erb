<!---------------------------------- MODAL UPDATE CONTACT----------------------------------->


<div id="update-contact-modal" class="modal fade show" tabindex="-1" role="dialog" style= "display: block;"
  aria-hidden="true">
   <div class="modal-dialog modal-contact">
   <div class="modal-content">
     <div class="card-black-form">

        <!-- Logo -->
        <div class="card-black-form-header pt-4 pb-4 text-center">
          <h3> Update contact</h3>
        </div>
        <!-- End Logo -->

         <div class="p-4">

         <%= form_tag(application_contact_path(@application, contact), method: "put", remote: true, class: 'pl-3 pr-3') do %>

         <div class="form-group">
           <%= label_tag(:first_name, "First name") %>
           <%= text_field_tag :first_name, contact.first_name, class: 'form-control', placeholder: 'Enter the first name' %>
         </div>

         <div class="form-group">
           <%= label_tag(:last_name, "Last name") %>
           <%= text_field_tag :last_name, contact.last_name, class: 'form-control', placeholder: 'Enter your last name' %>
         </div>

         <div class="form-group">
           <%= label_tag(:position, "Position") %>
           <%= text_field_tag :position, contact.position, class: 'form-control', placeholder: 'Enter your position'%>
         </div>

         <div class="form-group">
           <%= label_tag(:email, "Email") %>
           <%= text_field_tag :email, contact.email, class: 'form-control', placeholder: 'Enter your email' %>
         </div>

         <div class="form-group">
           <%= label_tag(:phone, "Phone") %>
           <%= text_field_tag :phone, contact.phone, class: 'form-control', placeholder: 'Enter your phone' %>
         </div>

         <div class="form-group text-center">

           <%= submit_tag "Update", class: "btn btn-itmeo", style:"margin-right:20px" %>

           <%= link_to application_contact_path(@application, contact), method: :delete do %>
            <button type="button" class="btn btn-salmon btn-alert-success" style="margin-left: 20px;">Delete</button>
            <% end %>

         </div>

         <% end %>

         </div>
       </div>
       </div><!-- /.modal-content -->
   </div><!-- /.modal-dialog -->
 </div><!-- /.modal -->


