	<!---------------------------------- MODAL CREATION CONTACT----------------------------------->

  <div id="create-contact-modal" class="modal fade" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="card-black-form">

          <!-- Logo -->
          <div class="card-black-form-header pt-4 pb-4 text-center">
            <i class="fas fa-user-tie fa-3x"></i>
          </div>
          <!-- End Logo -->

          <div class="p-4">

          <%= form_tag(application_contacts_path(@application), method: "post", class: 'pl-3 pr-3') do %>

          <div class="form-group">
            <%= label_tag(:first_name, "First name") %>
            <%= text_field_tag :first_name, "", class: 'form-control', placeholder: 'John' %>
          </div>

          <div class="form-group">
            <%= label_tag(:last_name, "Last name") %>
            <%= text_field_tag :last_name, "", class: 'form-control', placeholder: 'Doe' %>
          </div>

          <div class="form-group">
            <%= label_tag(:position, "Position") %>
            <%= text_field_tag :position, "", class: 'form-control', placeholder: 'Tech Recruiter'%>
          </div>

          <div class="form-group">
            <%= label_tag(:email, "Email") %>
            <%= text_field_tag :email, "", class: 'form-control', placeholder: 'john@bestcompany.com' %>
          </div>

          <div class="form-group">
            <%= label_tag(:phone, "Phone") %>
            <%= text_field_tag :phone, "", class: 'form-control', placeholder: '+336...' %>
          </div>

          <div class="form-group text-center">
            <%= submit_tag "Confirm", class: "btn btn-itmeo mt-3" %>
          </div>

          <% end %>
        </div>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->