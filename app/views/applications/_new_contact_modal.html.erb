	<!---------------------------------- MODAL CREATION CONTACT----------------------------------->

  <div id="create-contact-modal" class="modal fade" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <div class="text-center mt-2 mb-4">
            <i class="fas fa-user-tie fa-3x"></i>
          </div>

          <%= form_tag(application_contacts_path(@application), method: "post", class: 'pl-3 pr-3') do %>

          <div class="form-group">
            <%= label_tag(:first_name, "First name") %>
            <%= text_field_tag :first_name, "", class: 'form-control', placeholder: 'Enter your first name' %>
          </div>

          <div class="form-group">
            <%= label_tag(:last_name, "Last name") %>
            <%= text_field_tag :last_name, "", class: 'form-control', placeholder: 'Enter your last name' %>
          </div>

          <div class="form-group">
            <%= label_tag(:position, "Position") %>
            <%= text_field_tag :position, "", class: 'form-control', placeholder: 'Enter your position'%>
          </div>

          <div class="form-group">
            <%= label_tag(:email, "Email") %>
            <%= text_field_tag :email, "", class: 'form-control', placeholder: 'Enter your email' %>
          </div>

          <div class="form-group">
            <%= label_tag(:phone, "Phone") %>
            <%= text_field_tag :phone, "", class: 'form-control', placeholder: 'Enter your phone' %>
          </div>

          <div class="form-group text-center">
            <%= submit_tag "Confirm", class: "btn btn-primary" %>
          </div>

          <% end %>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->