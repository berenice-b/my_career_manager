<!-- Begin page -->
<div class="wrapper">

  <!-- ============================================================== -->
  <!-- Start Page Content here -->
  <!-- ============================================================== -->

  <div class="content-page">



      <!-- Start Content-->
      <div class="container-fluid">


        <!-- start page title -->
        <div class="row">
          <div class="col-12">
            <div class="page-title-box">
              <h2 class="text-center display-5 index-title text-transparent-black">MY JOB SEARCH</h2>
              <p class="text-center quote-title text-transparent-black"><i> "<%=Faker::Movie.quote%>"</i></p>
            </div>
          </div>
        </div>
        <!-- end page title -->

        <div class="row">
          <div class="col-12 text-center">
            <div>


            <!----- NEXT STEPS --->

              <!-----END NEXT STEPS --->


              <!-----NEXT STEPS --->
              <div class="tasks mr-4">
                <h5 class="mt-0 task-header text-uppercase text-left bg-transparentblack">
                    <span>MY NEXT STEPS <br> <small>What's on your agenda?</small> </span>
                    </h5>
                <div id="task-list-one" class="">

                  <%if @next_steps.count == 0 %>
                  <div class="card-body p-3">
                    <p class = "text-white"> Nothing on your agenda! <br> When you plan an interview, don't forget to 'add step' in the corresponding application.</p>
                    </div>
                  <%end%>

                <% @next_steps.each do |next_step| %> <!-- Starts Next Steps Cards Loop -->

                  <div class="card mb-0"> <!-- Start card -->
                    <div class="card-body p-3"> <!-- Start card body -->

                      <span class="badge <%= 'badge-danger' if next_step.category == 'interview' %>
                      <%= 'badge-warning' if next_step.category == 'phone interview' %><%= 'badge-info' if next_step.category == 'follow-up' %><%= 'badge-primary' if next_step.category == 'application sent' %>">
                        <%= next_step.category %>
                      </span>
                      
                      <small class="badge <%= 'badge-danger-lighten' if next_step.category == 'interview' %><%= 'badge-warning-lighten' if next_step.category == 'phone interview' %><%= 'badge-info-lighten' if next_step.category == 'follow-up' %><%= 'badge-primary-lighten' if next_step.category == 'application sent' %>">
                        <% unless next_step.date == nil %>
                        <%= next_step.date.strftime '%a %m/%d' %>
                        <% end %>
                      </small>   
                      
                      <h5 class="mt-2 mb-2 next-step">
                        @<%= link_to next_step.application.company_name, application_path(next_step.application), class: "text-body break-word", toggle: "modal" %>
                      </h5>

                    </div> <!-- End card-body -->
            
                  </div> <!-- End card -->

                  <% end %> <!-- End Next Steps Cards Loop -->


                </div> <!-- end company-list-2-->
              </div>
              <!-----END NEXT STEPS --->




              <!-----IDENTIFIED --->
              <div class="tasks mr-1">
                <h5 class="mt-0 task-header text-left text-uppercase header-identified">
                    <span>IDENTIFIED (<%= @identified.length %>) <i class="fas fa-angle-double-down text-white mobile"> </i><br> <small>Time to send application !</small> </span>
                    <span><button type="button" class="btn btn-itmeo m-0 button-header-2" data-toggle="modal" data-target="#new-modal-identified"><i class="fas fa-plus"></i></button></span>
                </h5>

                <div id="task-list-two" class="task-list-items" data-url="<%= sort_identified_applications_path%>">

                  <!-- Task Item -->
                  <% @identified.each do |application| %>
                  <div class="card mb-0 task-list-item" id="<%=dom_id(application)%>">
                    <div class="card-body p-0 card-identified">

                      <h5 class="mt-2 mb-2">
                        <%= link_to application.company_name, application_path(application), class: "text-body", toggle: "modal" %>
                      </h5>

                      <p class="mb-0">
                        <span class="pr-2 mb-2 d-inline-block">
                          <%= application.jobtitle %></span>
                      </p>
                    </div> <!-- end card-body -->
                  </div>
                  <% end %>
                  <!-- Task Item End -->


                </div> <!-- end company-list-2-->
              </div>
              <!-----END IDENTIFIED --->



              <!-----START APPLIED --->
              <div class="tasks mr-1">

                <h5 class="mt-0 task-header text-uppercase text-left header-applied">
                  <span>Applied (<%= @applied.length %>) <i class="fas fa-angle-double-down text-white mobile"></i><br> <small>Waiting for a call</small> </span>
                  <span><button type="button" class="btn btn-itmeo button-header-3" data-toggle="modal" data-target="#new-modal-applied"><i class="fas fa-plus"></i></button></span>
                </h5>

                <div id="task-list-three" class="task-list-items" data-url="<%= sort_applied_applications_path%>">

                  <!-- Task Item -->
                  <% @applied.each do |application| %>
                  <div class="card mb-0 task-list-item" id="<%=dom_id(application)%>">
                    <div class="card-body p-0">

                      <h5 class="mt-2 mb-2">
                        <%= link_to application.company_name, application_path(application), class: "text-body", toggle: "modal" %>
                      </h5>

                      <p class="mb-0">
                        <span class="pr-2 mb-2 d-inline-block">
                          <%= application.jobtitle %></span>
                      </p>

                    </div> <!-- end card-body -->
                  </div>
                  <% end %>
                  <!-- Task Item End -->

                </div> <!-- end company-list-3-->
              </div>

              <!-----END APPLIED --->



              <!-----START IN PROGRESS --->

              <div class="tasks">
                <h5 class="mt-0 task-header text-uppercase text-left header-in-progress">
                  <span>In Progress (<%= @in_progress.length %>) <i class="fas fa-angle-double-down text-white mobile"></i><br> <small>Your running processes</small></span>
                  <span><button type="button" class="btn btn-itmeo button-header-4" data-toggle="modal" data-target="#new-modal-in_progress"><i class="fas fa-plus"></i></button></span>
                </h5>

                  <div id="task-list-four" class="task-list-items" data-url="<%= sort_in_progress_applications_path%>">

                  <!-- Task Item -->
                  <% @in_progress.each do |application| %>
                  <div class="card mb-0 task-list-item" id="<%=dom_id(application)%>">
                    <div class="card-body p-0">

                      <h5 class="mt-2 mb-2">
                        <%= link_to application.company_name, application_path(application), class: "text-body", toggle: "modal" %>
                      </h5>

                      <p class="mb-0">
                        <span class="pr-2 mb-2 d-inline-block">
                          <%= application.jobtitle %></span>
                      </p>

                    </div> <!-- end card-body -->
                  </div>
                  <% end %>

                  <!-- Task Item End -->

                </div> <!-- end company-list-4-->
              </div>
              <!-----END IN PROGRESS --->

            </div> <!-- end .board-->
          </div> <!-- end col -->
        </div>
        <!-- end row-->

      </div> <!-- container -->

    </div> <!-- content -->


  <!-- ============================================================== -->
  <!-- End Page content -->
  <!-- ============================================================== -->


</div>


<%= render "new_application_identified_modal" %>
<%= render "new_application_applied_modal" %>
<%= render "new_application_in_progress_modal" %>

<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>