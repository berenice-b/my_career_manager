

var $cardStepToDestroy = $('#card-step-' + '<%= @step.id %>')
var $textAreaForNotes = $('#notes')
var $replacementText = $("<%= escape_javascript(render "text_area", application: @application) %>")

$cardStepToDestroy.hide()

$textAreaForNotes.replaceWith($replacementText)
$("#past_steps_card").replaceWith($("<%= escape_javascript(render "past_steps_area", step: @steps_done) %>"))

$.NotificationApp.send("Yeah !", "Your step has been validated", 'top-right', 'Background color', 'success');
