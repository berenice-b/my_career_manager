                                                    <p class="link-text-lg"> <%= contact.phone %></p> 
                                                   
                                            	<% end %>

                                        	</td>
                                            <td> <%= mail_to(contact.email) do %>

                                            	<i class="fas fa-envelope link-icon-sm"></i> 
                                                <p class="link-text-lg"> <%= contact.email %></p> 
                                            	<% end %>
                                            </td>
                                        </tr>

