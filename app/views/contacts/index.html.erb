                        <div class="table-sm">

                            <table class="table table-sm table-centered mb-0">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Position</th>
                                        <th>Phone number</th>
                                        <th>Email</th>
                                    </tr>
                                </thead>
                                <tbody>

        							<% @contacts.each do |contact| %>

                                        <tr>
                                            <td> <%= contact.first_name %> <%= contact.last_name %> </td>
                                            <td> <%= contact.position %></td>
                                            <td>
                                            	<%= tel_to contact.phone do %>

