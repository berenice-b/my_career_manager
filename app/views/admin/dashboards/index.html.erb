                                            <div class="col-6">
                                                <h5 class="text-muted font-weight-normal mt-0 text-truncate">Applications</h5>
                                                <h3 class="my-2 py-1"><%= Application.all.count %></h3>
                                            </div>
                                        </div> <!-- end row-->
                                    </div> <!-- end card-body -->
                                </div> <!-- end card -->
                            </div> <!-- end col -->

                            <div class="col-md-6 col-xl-3">
